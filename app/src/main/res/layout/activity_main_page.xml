<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_image"
    tools:context=".MainPage">

    <TextView
        android:text="@string/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:visibility="visible" />

    <Button
        android:text="@string/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:alpha="0.6"

        android:onClick="icsdOnClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button2"
        android:foreground="#000000"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:text="@string/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:alpha="0.6"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button"
        android:onClick="saxmOnClick"
        android:foreground="#000000"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <Button
        android:text="@string/button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="52dp"
        android:alpha="0.6"
        android:onClick="mathOnClick"
        android:foreground="#000000"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sitisi"
        android:id="@+id/SitisiBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button"
        android:alpha="0.6"
        android:foreground="#000000"
        android:textColor="#000000"
        android:textStyle="bold"

        android:onClick="sitisiOnClick" />

</RelativeLayout>
